<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <listener>
        <listener-class>com.example.tp.ApceInitializer</listener-class>
    </listener>

    <!-- Servlet Login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.example.tp.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Servlet Register -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.example.tp.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Servlet Accueil -->
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>com.example.tp.AccueilServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <!-- Servlet Debug -->
    <servlet>
        <servlet-name>Debug</servlet-name>
        <servlet-class>com.example.tp.DebugServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Debug</servlet-name>
        <url-pattern>/debug</url-pattern>
    </servlet-mapping>

    <!-- Landing page -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
