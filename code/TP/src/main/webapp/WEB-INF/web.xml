    <servlet>
        <servlet-name>RetirerFournisseur</servlet-name>
        <servlet-class>com.example.tp.RetirerFournisseurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetirerFournisseur</servlet-name>
        <url-pattern>/retirer_fournisseur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RetirerDistributeur</servlet-name>
        <servlet-class>com.example.tp.RetirerDistributeurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetirerDistributeur</servlet-name>
        <url-pattern>/retirer_distributeur</url-pattern>
    </servlet-mapping>

    <!-- Servlet Fournisseur -->
    <servlet>
        <servlet-name>DashboardFournisseur</servlet-name>
        <servlet-class>com.example.tp.DashboardFournisseurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
