    </servlet>

    <servlet-mapping>
        <servlet-name>SupprimerProduit</servlet-name>
        <url-pattern>/supprimer_produit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssocierFournisseur</servlet-name>
        <servlet-class>com.example.tp.AssocierFournisseurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AssocierFournisseur</servlet-name>
        <url-pattern>/associer_fournisseur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssocierDistributeur</servlet-name>
        <servlet-class>com.example.tp.AssocierDistributeurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
