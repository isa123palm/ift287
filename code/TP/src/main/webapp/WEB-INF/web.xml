<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <listener>
        <listener-class>com.example.tp.ApceInitializer</listener-class>
    </listener>

    <!-- Servlet Login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.example.tp.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Servlet Logout -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.example.tp.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Servlet Register -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.example.tp.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Servlet Producteur -->
    <servlet>
        <servlet-name>DashboardProducteur</servlet-name>
        <servlet-class>com.example.tp.DashboardProducteurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
